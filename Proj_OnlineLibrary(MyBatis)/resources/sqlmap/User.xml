	<resultMap id="UserVO" type="UserVOxml">
		<result column="id" property="id" />
		<result column="nickname" property="nickname" />
		<result column="pw" property="pw" />
		<result column="email" property="email" />
		<result column="phone" property="phone" />
		<result column="identquest" property="identquest" />
		<result column="identanswer" property="identanswer" />
		<result column="tier" property="tier" />
		<result column="point" property="point" />
	</resultMap>
	
	<select id="selectUsersByISBNUserVO" parameterType="String" resultMap="UserVO">
		<!-- parameterType : isbn의 자료형. resultType : 결과로 리턴받는 데이터의 자료형 -->
		<!-- CDATA 표현식 : SQL 구문이라는 것을 명시해주는 문법 -->
		<![CDATA[
			SELECT *
			FROM users
			WHERE id = #{searchWord}
		]]>
	</select>
	
</mapper>
